{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "jsx": "react",
    "allowJs": true,
    "esModuleInterop": true,
    "rootDir": "..",
    "outDir": "dist",
    "types": ["@docusaurus/theme-classic"],
    "skipLibCheck": true,
    "paths": {
      "@wiki/*": ["../src/*"],
      "@cli/*": ["./src/*"],
      "@site/*": ["../*"]
    },
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include": ["./src", "../src/utils/config.js"]
}
